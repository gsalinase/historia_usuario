<div class="pt-5">
  <h1>Articulos</h1>

  <div class="mt-5 row">
  <% @posts.each do |post| %>
    <div class="col-md-3">
      <div class="card mb-4">
        <%= image_tag(post.image, class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
          <p class="card-text"><%= post.content %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>