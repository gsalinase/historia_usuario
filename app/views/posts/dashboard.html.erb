<div class="pt-5">
  <h1 class="pb-4">Nuevo Post</h1>
  <form id="create_posts" action="/posts/create" method="get">
    <div class="form-group">
      <label for="title">Titulo</label>
      <input type="text" class="form-control" name="title" aria-describedby="emailHelp"
        placeholder="Agrega un titulo">
    </div>
    <div class="form-group">
    <label for="image">URL de Imagen</label>
      <input type="text" class="form-control" name="image" aria-describedby="emailHelp"
        placeholder="Pega aqui tu imagen">
    </div>
    <div class="form-group">
      <label for="content">Contenido</label>
      <textarea class="form-control" name="content" rows="3" placeholder="Agrega aqui tu contenido"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Postear</button>
  </form>
</div>